{
  "name": "global-onlinefix-installer",
  "version": "1.0.0",
  "description": "Automated installer for GlobalFix Steam game modifications",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "build:dir": "electron-builder --win --dir"
  },
  "keywords": ["electron", "steam", "game", "installer"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "node-7z": "^3.0.0",
    "ini": "^4.1.1"
  },
  "build": {
    "appId": "com.globalfix.installer",
    "productName": "GlobalFix Installer",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "asarUnpack": [
      "node_modules/7zip-bin/**/*"
    ],
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "4310811.png",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "4310811.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "publisherName": "GlobalFix",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GlobalFix Installer"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    }
  }
}
